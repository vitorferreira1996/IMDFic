## Atividade 02
var senha := "0"

enquanto senha <> "sair" faça
	   senha := leia_texto
    	se senha == "acertadamente" então
        	escreva "Acesso concedido"
            senha := "sair"
        senão
        	se senha == "sair" então
            	escreva "Programa encerrado"
            fim
       fim       
fim

        
